<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_interim"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="@color/greyBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.woofer.Interim"
    tools:showIn="@layout/activity_interim">

    <ImageButton
        android:id="@+id/imageButtonFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/greyBackground"
        android:foregroundTint="@color/greyBackground"
        android:onClick="Friends"
        android:tint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_group_white_48dp"
        android:layout_marginBottom="52dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageButtonUpdates"
        android:layout_alignStart="@+id/imageButtonUpdates" />

    <ImageButton
        android:id="@+id/imageButtonUpdates"
        android:onClick="Updates"
        android:text="Friend Updates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/greyBackground"
        android:tint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_whatshot_white_48dp"
        android:layout_marginTop="31dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Updates"
        android:textColor="@color/colorPrimary"
        android:layout_alignBottom="@+id/imageButtonUpdates"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friends"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="21dp"
        android:layout_alignBottom="@+id/imageButtonFriends"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
